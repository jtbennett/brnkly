<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @Styles.Render("~/content/frameworks.css", "~/content/brnkly.css")
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    </head> 
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target="#top-nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Brnkly</a>
                    <div id="top-nav-collapse" class="nav-collapse collapse">
                        <p class="navbar-text pull-right">
                            Logged in as <a href="#" class="navbar-link">@User.Identity.Name</a>
                        </p>
                        <ul class="nav">
                            <li><a href="#">Logging</a></li>
                            <li><a href="#">Caching</a></li>
                            <li class="active"><a href="~/raven">Raven</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        @RenderSection("SectionNav", false)
        
        <div class="container-fluid">
            @RenderBody()
        </div>

        @Scripts.Render("~/scripts/frameworks.js", "~/scripts/brnkly.js")
    </body>
</html>